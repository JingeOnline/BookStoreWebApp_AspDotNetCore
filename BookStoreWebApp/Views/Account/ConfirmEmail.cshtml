@{
    ViewData["Title"] = "ConfirmEmail";
}

<div class="container">
    <div class="row text-center">
        <div class="col-md-4">
            @if (ViewBag.IsSucceeded == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>Your email have been varified.</p>
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    <p>Email varify failed.</p>
                </div>
            }
        </div>
    </div>
</div>