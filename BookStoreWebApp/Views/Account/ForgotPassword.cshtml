@model BookStoreWebApp.Models.ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="container">
    <h1>ForgotPassword</h1>

    <h4>No worry, you can reset your password easily.</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>If this email is registered. We have send an email to your registered email address.</p>
                </div>
            }
            else
            {
                <form asp-action="ForgotPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary" />
                    </div>
                </form>
            }
        </div>
    </div>

    <div>
        <p>Back to <a asp-action="Login" asp-controller="Account">Login</a></p>
    </div>
</div>
